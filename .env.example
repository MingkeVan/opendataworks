# OpenDataWorks 生产环境配置
# 复制此文件为 .env 并根据实际环境修改

# MySQL 配置
MYSQL_ROOT_PASSWORD=root123
MYSQL_DATABASE=opendataworks
MYSQL_USER=opendataworks
MYSQL_PASSWORD=opendataworks123

# 后端服务配置
SPRING_PROFILES_ACTIVE=prod
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/opendataworks?useUnicode=true&characterEncoding=utf8&serverTimezone=Asia/Shanghai&useSSL=false
SPRING_DATASOURCE_USERNAME=opendataworks
SPRING_DATASOURCE_PASSWORD=opendataworks123
DOLPHIN_SERVICE_URL=http://dolphin-service:8000

# DolphinScheduler Service 配置（与 dolphinscheduler-service/config.py 对应）
DS_ENV=prod
DS_SERVICE_HOST=0.0.0.0
DS_SERVICE_PORT=8000
DS_API_BASE_URL=http://your-ds-host:12345/dolphinscheduler

PYDS_JAVA_GATEWAY_ADDRESS=127.0.0.1
PYDS_JAVA_GATEWAY_PORT=25333
# 可选：若 Java Gateway 服务启用了认证，则填写 Token
PYDS_JAVA_GATEWAY_AUTH_TOKEN=

PYDS_USER_NAME=admin
PYDS_USER_PASSWORD=dolphinscheduler123
PYDS_USER_EMAIL=pyds-service@example.com
PYDS_USER_PHONE=13000000000
PYDS_USER_TENANT=default

PYDS_WORKFLOW_PROJECT=opendataworks
PYDS_WORKFLOW_QUEUE=queuePythonGateway
PYDS_WORKFLOW_WORKER_GROUP=default
PYDS_WORKFLOW_WARNING_TYPE=NONE
PYDS_WORKFLOW_EXECUTION_TYPE=PARALLEL
PYDS_WORKFLOW_RELEASE_STATE=offline

DS_DEFAULT_TIMEOUT_SECONDS=0
DS_DEFAULT_RETRY_TIMES=0
DS_DEFAULT_RETRY_INTERVAL=1

LOG_LEVEL=INFO

# 时区设置
TZ=Asia/Shanghai
