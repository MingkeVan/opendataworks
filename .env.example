# OpenDataWorks 生产环境配置
# 复制此文件为 .env 并根据实际环境修改

# MySQL 配置
MYSQL_ROOT_PASSWORD=root123
MYSQL_DATABASE=opendataworks
MYSQL_USER=opendataworks
MYSQL_PASSWORD=opendataworks123

# 后端服务配置
SPRING_PROFILES_ACTIVE=prod
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/opendataworks?useUnicode=true&characterEncoding=utf8&serverTimezone=Asia/Shanghai&useSSL=false
SPRING_DATASOURCE_USERNAME=opendataworks
SPRING_DATASOURCE_PASSWORD=opendataworks123

# DolphinScheduler OpenAPI（Java 后端直接调用）
DOLPHIN_URL=http://your-ds-host:12345/dolphinscheduler
DOLPHIN_TOKEN=your-dolphinscheduler-token
# 如已固定项目编码可填写，未设置则由后端自动创建/查询
DOLPHIN_PROJECT_CODE=0
# 可选：覆盖默认项目名（opendataworks）
DOLPHIN_PROJECT_NAME=opendataworks

# 时区设置
TZ=Asia/Shanghai
